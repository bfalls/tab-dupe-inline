{
  "manifest_version": 3,
  "name": "Tab Dupe Inline",
  "version": "1.0.0",
  "description": "Duplicates the active tab, closes the original, the duplicate gets focus.",
  "action": {
    "default_title": "Duplicate tab and close original",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": ["tabs"],
  "commands": {
    "dupe-inline": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Duplicate tab and close original"
    }
  }
}
